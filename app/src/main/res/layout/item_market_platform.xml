<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="12dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_warn"
                    android:visibility="gone"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/market_list_warn"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/tv_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_cd"
                    android:textSize="15sp"
                    tools:text="sdfsdfsd" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/app_text_gray"
                    android:textSize="12sp"
                    tools:text="sdfsdfsd" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_coin_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:textColor="@color/app_text_gray"
                android:textSize="15sp"
                tools:text="sdfsdfsd" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_cd"
                android:textSize="16sp"
                tools:text="sdfsdfsd" />

            <TextView
                android:id="@+id/tv_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/app_text_gray_3"
                android:textSize="12sp"
                tools:text="sdfsdfsd" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_state"
        android:layout_width="@dimen/width_market_btn"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:background="@drawable/market_green_bg"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:text="sdfsfs" />


</LinearLayout>
