<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_adv"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_black_cd"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/active_browse" />

                    <TextView
                        android:id="@+id/tv_browse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textColor="#818181"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_pass_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        tools:text="已通过1/5"
                        android:textColor="#818181"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="sdfsdf"
                        android:textColor="@color/text_color_ffa300"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#FAFCFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/active_date_time" />

                    <TextView
                        android:id="@+id/tv_date_time"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_black_cd"
                        android:textSize="14sp" />


                </LinearLayout>

                <View
                    style="@style/style_split_line"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/active_location" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_black_cd"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="@color/bg_gray" />


                    <LinearLayout
                        android:id="@+id/ll_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看"
                            android:textColor="@color/text_color_ffa300"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地图"
                            android:textColor="@color/text_color_ffa300"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/style_split_line"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/active_mobile" />

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/text_black_cd"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#FAFCFF" />

                <TextView
                    android:id="@+id/tv_approve_user"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="已报名用户(0)/已通过(0)"
                    android:textColor="#ff3a3a3a"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/line_approve_user"
                    style="@style/style_split_line"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_approve_user"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:gravity="center_vertical">

                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/rv_approve_user"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp">-->


                    <!--</android.support.v7.widget.RecyclerView>-->

                    <FrameLayout
                        android:id="@+id/fl_approve_user"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                    </FrameLayout>

                    <ImageView
                        android:id="@+id/img_right"
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:src="@drawable/more_right_gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#FAFCFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="活动详情"
                    android:textColor="#ff3a3a3a"
                    android:textSize="15sp" />

                <WebView
                    android:id="@+id/wv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval">


                </WebView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fbfbfb">

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="#ffff5757"
                android:gravity="center"
                android:text="立即报名"
                android:textColor="#ffffffff"
                android:textSize="17dp" />

            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/fra_comment"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/comments" />

                    <TextView
                        android:id="@+id/tv_comment_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="5dp"
                        android:background="#fbfbfb"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="#ff4747"
                        android:textSize="12sp" />


                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/active_mobile" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_collection"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/active_like" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</layout>