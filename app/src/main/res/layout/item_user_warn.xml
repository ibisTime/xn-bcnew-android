<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_left_interval"
            android:paddingRight="@dimen/layout_right_interval"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上涨至"
                android:textColor="#ff3a3a3a"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:text="$12789.44"
                android:textColor="@color/text_black_cd"
                android:textSize="16dp"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="23dp"
                android:text="时提醒"
                android:textColor="@color/text_black_cd"
                android:textSize="16dp"
                />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/market_warn_sub"
                android:layout_width="17dp"
                android:layout_height="17dp" />

        </LinearLayout>

        <View
            style="@style/style_split_line"/>

    </LinearLayout>
</layout>