<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/user_center_bg" />

        <com.cdkj.baselibrary.views.TopTitleLayout
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.cdkj.baselibrary.views.TopTitleLayout>

        <LinearLayout
            android:id="@+id/lin_user_head"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/user_center_bg"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_user_logo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/photo_default" />


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/fast_to_login"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </LinearLayout>

        <com.cdkj.baselibrary.views.tablayout.TabLayout
            android:id="@+id/tablayout"
            style="@style/MyTabLayout2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            app:tabIndicatorHeight="4dp" />

        <View style="@style/style_split_line" />


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</layout>