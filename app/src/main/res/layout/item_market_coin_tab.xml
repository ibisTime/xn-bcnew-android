<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_coin"
        android:text="1111"
        android:textSize="15sp"
        android:textColor="@color/text_black_cd"
        android:layout_marginTop="15dp"
        android:background="@drawable/common_market_coin_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginRight="@dimen/layout_right_interval"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_selected"
        android:visibility="gone"
        android:layout_alignBottom="@+id/tv_coin"
        android:layout_alignRight="@+id/tv_coin"
        android:background="@drawable/market_coin_tab_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>